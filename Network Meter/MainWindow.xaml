<Window x:Class="Network_Meter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network_Meter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"></ColumnDefinition>

      <ColumnDefinition Width="Auto"></ColumnDefinition>

    </Grid.ColumnDefinitions>


    <Grid.RowDefinitions>

      <RowDefinition  Height="Auto" MinHeight="50"/>
      <!-- The First Row(after Zero row) -->
      <RowDefinition  Height="Auto" MinHeight="50"/>
      <!-- The Second Row -->

      <RowDefinition  Height="50"/>
      <!-- The Third Row -->

      <RowDefinition  Height="50"/>
      <!-- The Fourth Row -->


      <RowDefinition  Height="50"/>
      <!-- The Fifth Row -->

      <RowDefinition  Height="50"/>
      <!-- The sixth Row -->

      <RowDefinition  Height="50"/>
      <!-- The seventh Row -->







    </Grid.RowDefinitions>


    <Label x:Name="InterfaceLabel" Content="Interface" Height="30" Margin="0,0,0,0" Width="Auto" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
    <Label x:Name="SpeedLabel" Content="Speed" Height="30" Width="Auto"   VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Grid.Row="1"/>
    <Label x:Name="ByteSentLabel" Content="Bytes Sent" Height="30" Width="Auto"   VerticalAlignment="Center" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Grid.Row="2"/>


  </Grid>
</Window>
